{
    "name": "kommuna/nabu",
    "description": "Search and recommendation core engine",
    "keywords": [
        "kommuna",
        "nabu"
    ],
    "homepage": "https://github.com/kommuna/nabu",
    "license": "MIT",
    "authors": [
        {
            "name": "l80",
            "role": "Developer"
        }
    ],

    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:kommuna/restmodel.git"
        }
    ],

    "require": {
        "php" : ">=5.5.0",
        "monolog/monolog": ">=1.13.0",
        "slim/slim": "2.6.2",
        "respect/validation": ">=0.9.3",
        "j4mie/idiorm": "^1.5",
        "league/fractal": ">=0.13.0",
        "videlalvaro/php-amqplib": "2.5.0",
        "kommuna/restmodel": "dev-master"

    },
    "require-dev": {
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
      "psr-4": {
        "Nabu\\": "api/src/"
      }
    },
    "autoload-dev": {
        "psr-4": {
            "Kommuna\\Nabu\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "master": "1.0-dev"
        }
    }
}
